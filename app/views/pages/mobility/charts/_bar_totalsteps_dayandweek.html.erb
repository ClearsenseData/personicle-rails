<div class="card">
  <div class="card-header bg-transparent">
    <div class="row align-items-center">
      <div class="col">
        
        <h5 class="h3 text-black mb-0">Mobility bar chart - total steps everyday and every week</h5>
      </div>
      
    </div>
  </div>
  <div class="card-body">
    <!-- Chart -->
    <div class="chart">
      
      <% if user_data.length() != 0 %>
         <%# <%= column_chart user_data.group_by_day(|k,v| k).sum, points:false, round: 2, loading: "Loading...", %>
         <%= column_chart user_data, points:false, round: 2, loading: "Loading...",
            xtitle: "Date", ytitle: "Total Steps"
          %>
          
      <%else%>
        <h3 style="color:white;">No steps data for the past 3 months</h3>
      <%end%>

      
      <%# <canvas id="chart-sales-dark" class="chart-canvas"></canvas> %>
    </div>
  </div>
</div>
