<style>
.hidden {
    display: none;
}
</style>
<div class="card">
  <div class="card-header bg-transparent">
    <div class="row align-items-center">
      <div class="col">
        <h6 class="text-black text-uppercase ls-1 mb-1">Overview</h6>
        <h5 class="h3 text-black mb-0">Lifestyle data and trends</h5>
      </div>
      <div class="col">
        <ul  class="nav nav-pills justify-content-end">
          <li class="nav-item mr-2 mr-md-0" name="chart" value="daily" data-toggle="chart" data-target="#chart-sales-dark" data-update='{"data":{"datasets":[{"data":[0, 20, 10, 30, 15, 40, 20, 60, 60]}]}}' data-prefix="$" data-suffix="k">
             <%# <a class="nav-link py-2 px-3 active"  data-toggle="tab">
              <span class="d-none d-md-block">Daily</span>
              <span class="d-md-none">D</span>
            </a> %>
            <div id="actions">
                <div>
                    <label><input type="radio" name="chart" value="daily" checked="checked"/>Daily</label>
                    <label><input type="radio" name="chart" value="week"  />Weekly</label>
                </div>
            </div>
          </li>
          <li class="nav-item" name="chart" value="week" data-toggle="chart" data-target="#chart-sales-dark" data-update='{"data":{"datasets":[{"data":[0, 20, 5, 25, 10, 30, 15, 40, 40]}]}}' data-prefix="$" data-suffix="k">
            <%# <a  class="nav-link py-2 px-3"  data-toggle="tab">
              <span class="d-none d-md-block">Weekly</span>
              <span class="d-md-none">W</span>
            </a>  %>
              
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="card-body">
    <!-- Chart -->
    <div class="chart">
      
      <% if user_data.length() != 0 %>
         <%# <%= puts daily_sleep_summary %> 
         <div id="charts">
                <div id="daily" class="chart"><%= column_chart [
              {
                  name: "Daily Sleep", type: "column", data: daily_sleep_summary.map {|k,v| [k, v['duration']]} 
              }
          ], suffix: " h",points:false, round: 2, loading: "Loading...", xtitle: "Date", ytitle: "Sleep Duration (hours)" %></div>
                <div id="week"  class="chart hidden">
                  <%= column_chart [
                      {
                          name: "Weekly Sleep", type: "column", data: weekly_sleep_summary
                      }
                  ], suffix: " h",points:false, round: 2, loading: "Loading...", xtitle: "Year - Week number", ytitle: "Sleep Duration (hours)" %> 
                
                </div>
            </div> 
          


      <%else%>
        <h3 style="color:black;">No activities for the past 3 months</h3>
      <%end%>
     
      <%# <canvas id="chart-sales-dark" class="chart-canvas"></canvas> %>
    </div>
  </div>
</div>
<script>
function revealChart(event) {
    var chart = $(event.target).val(); 
    $('#charts .chart').hide(); 
    $('#' + chart).show();  
}

$(function() {
    $('#actions input').click(revealChart);
});
</script>